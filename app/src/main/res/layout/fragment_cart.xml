<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/register_title_bg"
        android:gravity="center"
        android:padding="14dp"
        android:text="购物车"
        android:textColor="@color/color_user_collection"
        android:textSize="20sp"
        tools:ignore="HardcodedText"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/go_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="购物车为空，去逛逛吧"
            />

        <ListView
            android:id="@+id/cart_fragment_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        >

        <CheckBox
            android:id="@+id/cart_total_check"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            />

        <TextView
            android:id="@+id/tv_fragment_shopcar_text02"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cart_total_check"
            android:gravity="center_vertical"
            android:text="全选"
            android:textColor="#656565"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/cart_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="160dp"
            android:gravity="center_vertical"
            android:text="总价"
            android:textColor="#999999"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/cart_tv_total_sum"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="118dp"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="#00802d"
            android:textSize="14dp"
            />

        <Button
            android:id="@+id/cart_btn_pushsum"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:paddingBottom="18dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="18dp"
            android:text="结算"
            android:textSize="14dp"
            />
    </RelativeLayout>

</LinearLayout>
