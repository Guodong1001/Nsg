<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/register_title_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_login_back"
            android:padding="14dp"
            android:src="@drawable/ic_action_back"
            android:contentDescription=""/>

        <TextView
            android:id="@+id/title_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="商品详情"
            android:gravity="center_vertical"
            android:textColor="@color/color_user_collection"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/details_collection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:src="@drawable/ic_action_collection"/>
        <ImageView
            android:id="@+id/details_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="14dp"
            android:src="@drawable/ic_action_share"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/details_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <TextView
                android:id="@+id/details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_user_collection"
                android:padding="5dp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/goods_img"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/goods_name"
                android:layout_toEndOf="@+id/goods_img">

                <TextView
                    android:id="@+id/details_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_user_collection"
                    android:paddingTop="5dp"
                    android:text="￥"
                    android:textColor="@color/register_title_bg"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/details_salenum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_user_collection"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="已售：0件"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_user_collection"
                android:orientation="horizontal"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/details_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="送至"/>

                <TextView
                    android:id="@+id/details_nationwide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DD3000"
                    android:padding="5dp"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/details_cargo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/details_free_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/details_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_user_collection"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/details_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="评价"/>

                <TextView
                    android:id="@+id/details_good_reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="#DD3000"
                    android:padding="5dp"
                    android:text="好评率：100%"
                    android:textColor="#ffffff"/>

                <TextView
                    android:id="@+id/details_evaluatenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#DD3000"
                    android:padding="5dp"
                    android:text="0人评价"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            <TextView
                android:id="@+id/details_goods_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_user_collection"
                android:drawableRight="@drawable/ic_normal_dot_left"
                android:padding="5dp"
                android:text="商品介绍"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/details_goods_v5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_user_collection"
                android:drawableLeft="@drawable/ic_goods_store"
                android:drawablePadding="10sp"
                android:drawableRight="@drawable/ic_normal_dot_left"
                android:padding="5dp"
                android:text="好商城V5"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_user_collection"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/details_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/details_serve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/details_logistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_normal_title_left"
                android:gravity="center_vertical"
                android:text="店铺推荐"
                android:textSize="18sp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/details_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/details_tv_service"
            android:text="客服"
            android:gravity="center"
            android:drawableTop="@drawable/ic_goods_kefu"
            android:textSize="12sp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/details_tv_cart"
            android:text="购物车"
            android:gravity="center"
            android:drawableTop="@drawable/ic_goods_cart"
            android:textSize="12sp"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/details_tv_add_cart"
            android:text="加入购物车"
            android:gravity="center"
            android:background="@drawable/details_item_add_cart"
            android:drawableTop="@drawable/ic_collection_goods"
            android:textSize="12sp"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:id="@+id/details_tv_store"
            android:text="立即购买"
            android:gravity="center"
            android:background="@drawable/details_item_shore"
            android:drawableTop="@drawable/ic_collection_store"
            android:textSize="12sp"
            android:padding="10dp"
            />
    </LinearLayout>



</LinearLayout>
